{
  "name": "sorbisch-leicht",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "expo start --clear",
    "android": "expo run:android",
    "android:release": "cd android && ./gradlew assembleRelease && cd ..",
    "android:bundle": "cd android && ./gradlew bundleRelease && cd ..",
    "ios": "expo run:ios",
    "ios:release": "expo run:ios --configuration Release",
    "web": "expo start --web",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "detox test",
    "dev": "expo start",
    "clean": "rimraf dist .expo .expo-shared",
    "clean:ios": "cd ios && xcodebuild clean && rm -rf build && cd ..",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "pod:install": "cd ios && pod install && cd ..",
    "pod:update": "cd ios && pod update && cd ..",
    "build:mock-pack": "ts-node -r tsconfig-paths/register --project tsconfig.scripts.json scripts/build-mock-pack.ts",
    "copy:pack": "ts-node -r tsconfig-paths/register --project tsconfig.scripts.json scripts/copy-pack-assets.ts",
    "build:legacy-pack:de_hsb": "ts-node -r tsconfig-paths/register --project tsconfig.scripts.json scripts/convert-legacy-content.ts ../../old/main_deutsch_obersorbisch/assets ../../converted-packs de-hsb-pack \"DE_HSB Pack\" 1.0.0",
    "build:legacy-pack:de_dsb": "ts-node -r tsconfig-paths/register --project tsconfig.scripts.json scripts/convert-legacy-content.ts ../../old/main_deutsch_niedersorbisch/assets ../../converted-packs de-dsb-pack \"DE_DSB Pack\" 1.0.0"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@reduxjs/toolkit": "^2.3.0",
    "expo": "~54.0.13",
    "expo-asset": "~12.0.9",
    "expo-av": "~16.0.7",
    "expo-constants": "~18.0.9",
    "expo-crypto": "~15.0.7",
    "expo-dev-client": "~6.0.15",
    "expo-file-system": "~19.0.17",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-localization": "~17.0.7",
    "expo-network": "~8.0.7",
    "expo-router": "~6.0.12",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-sqlite": "~16.0.8",
    "expo-status-bar": "~3.0.8",
    "fflate": "^0.8.2",
    "i18next": "^23.11.0",
    "i18next-browser-languagedetector": "^7.2.2",
    "lodash": "^4.17.21",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.0.2",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-mmkv": "^2.12.2",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-track-player": "^4.1.2",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "yazl": "^2.5.1"
  },
  "expo": {
    "assetBundlePatterns": [
      "assets/packs/mock-pack.zip"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/react-native": "^12.5.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.0",
    "@types/react-test-renderer": "^19.0.0",
    "@types/xml2js": "^0.4.14",
    "@types/yazl": "^3.3.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "better-sqlite3": "^9.5.0",
    "detox": "^20.15.4",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "jest": "^29.7.0",
    "metro-resolver": "^0.80.9",
    "react-test-renderer": "19.1.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "xml2js": "^0.6.2"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
